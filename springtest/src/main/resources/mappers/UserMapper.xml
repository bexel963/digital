<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.green.test.dao.UserDao">
  <select id="getEmail" resultType="String">
    select email from spring.user where id = #{id}
  </select>
  
  <select id="getUser" resultType="kr.green.test.vo.Uservo">
    select * from spring.user where id = #{id}
  </select>
  
  <insert id="insertUser" parameterType="kr.green.test.vo.Uservo">
  	insert into spring.user(id,pw,name,age,home,email)
  		values(#{user.id},#{user.pw},#{user.name},#{user.age},#{user.home},#{user.email})
  </insert>
  
  <select id="getAllUser" resultType="kr.green.test.vo.Uservo">
  	select * from spring.user
  </select>
  
  <update id="updateAuthor">
  	update user set author = #{user.author} where id = #{user.id}
  </update>
  
  <update id="updateUser">
  	update user set pw = #{user.pw} where id = #{user.id}
  </update>
</mapper>



